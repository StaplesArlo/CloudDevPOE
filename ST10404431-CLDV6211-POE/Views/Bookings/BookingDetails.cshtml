@model ST10404431CLDV6211POE.Models.Booking

@{
    ViewData["Title"] = "Booking Details";
}

<h1 class="text-center bg-primary text-white p-3 rounded">
    <i class="bi bi-info-circle"></i> Booking Details
</h1> <!-- Styled Header -->
<hr />

<section class="container" style="max-width: 1000px;">
    @* CONTAINER *@
    <section class="row justify-content-center">
        @* ROW *@
        <section class="col-md-8">
            @* COLUMN *@
            <div class="card shadow-lg p-4">
                @* BOX *@
                <dl class="row">
                    <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.BookingDate)</dt>
                    <dd class="col-sm-9">@Model.BookingDate.ToString("MMMM dd, yyyy")</dd>

                    <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Event)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Event.EventName)</dd> 

                    <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Venue)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Venue.VenueName)</dd> 
                </dl>
            </div> @* BOX *@
        </section> @* COLUMN *@
    </section> @* ROW *@
</section> @* CONTAINER *@

<section class="text-center mt-3">
    @* ACTION BUTTONS *@
    <a asp-action="EditBooking" asp-route-id="@Model.BookingID" class="btn btn-warning px-3">✏ Edit Booking</a>
    <a class="btn btn-primary px-3" href="@Url.Action("BookingIndex", "Bookings")">⬅ Back to Bookings</a>
</section>