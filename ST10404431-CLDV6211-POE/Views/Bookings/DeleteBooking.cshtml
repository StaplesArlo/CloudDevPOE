@model ST10404431CLDV6211POE.Models.Booking

@{
    ViewData["Title"] = "Delete Booking";
}

<h1 class="text-center bg-danger text-white p-3 rounded">
    <i class="bi bi-trash"></i> Delete Booking
</h1> <!-- Styled Header -->
<hr />

<section class="container" style="max-width: 1000px;">
    @* CONTAINER *@
    <section class="row justify-content-center">
        @* ROW *@
        <section class="col-md-8">
            @* COLUMN *@
            <div class="card shadow-lg border-danger p-4">
                @* BOX *@
                <p class="text-center text-danger fw-bold">
                    ⚠ Are you sure you want to delete this booking? This action **cannot** be undone.
                </p> <!-- Warning Message -->

                <dl class="row">
                    <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.BookingDate)</dt>
                    <dd class="col-sm-9">@Model.BookingDate.ToString("MMMM dd, yyyy")</dd>

                    <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Event)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Event.EventName)</dd> @* FIXED: Display Event Name *@

                    <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Venue)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Venue.VenueName)</dd> @* FIXED: Display Venue Name *@
                </dl>
            </div> @* BOX *@
        </section> @* COLUMN *@
    </section> @* ROW *@
</section> @* CONTAINER *@

<section class="text-center mt-3">
    @* ACTION BUTTONS *@
    <form asp-action="DeleteBooking" method="post">
        @* DELETE FORM *@
        <input type="hidden" asp-for="BookingID" />
        <button type="submit" class="btn btn-danger px-4">🗑 Confirm Delete</button> @* DELETE BUTTON *@
        <a class="btn btn-secondary px-4 ms-2" href="@Url.Action("BookingIndex", "Bookings")">⬅ Cancel</a> @* CANCEL BUTTON *@
    </form>
</section>