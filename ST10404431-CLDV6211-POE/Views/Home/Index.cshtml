@{
    ViewData["Title"] = "EventEase - Your Ultimate Event Booking Platform";
}

<div class="container text-center">
    <h1>Welcome to EventEase</h1>
    <p class="lead">Find and book the perfect venue for your next event.</p>

    <img src="/images/event_banner.jpg" class="img-fluid rounded" alt="EventEase Banner" />

    <div class="row mt-4">
        <div class="col-md-6">
            <h2>Explore Venues</h2>
            <p>Discover a variety of venues for concerts, conferences, weddings, and more.</p>
            <a asp-controller="Home" asp-action="Venues" class="btn btn-primary">View Venues</a>
        </div>
        <div class="col-md-6">
            <h2>Book an Event</h2>
            <p>Seamlessly book a venue for your special occasion and manage event details.</p>
            <a asp-controller="Home" asp-action="BookEvent" class="btn btn-primary">Book Event</a>
        </div>
    </div>

    <hr />

    <div class="row">
        <div class="col-md-4">
            <h3>Easy Booking</h3>
            <p>Reserve venues with just a few clicks. Hassle-free experience guaranteed!</p>
        </div>
        <div class="col-md-4">
            <h3>Exclusive Offers</h3>
            <p>Enjoy special discounts and premium event services tailored for you.</p>
        </div>
        <div class="col-md-4">
            <h3>Trusted by Thousands</h3>
            <p>Join our community and experience seamless event planning.</p>
        </div>
    </div>
</div>