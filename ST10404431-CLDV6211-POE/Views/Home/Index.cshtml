

@{
    ViewData["Title"] = "Home Page";
    var events = Model.Item1; // List of events
    var venues = Model.Item2; // List of venues
   // var bookings = Model.Item3; // List of bookings
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="mb-4 text-center bg-primary text-white p-3 rounded">
            <i class="bi bi-building"></i> Welcome to EventEase
        </h1>
        
        <p class="lead">With us, events are an ease</p>
    </div>

    <hr class="my-4" />

    <div class="row">
        <div class="col-md-6">
            <h2>Popular Venues</h2>
            <ul class="list-group">
               
               
                    @foreach (var venue in venues)
                    {
                        <li class="list-group-item">
                            @venue.VenueName - @venue.Location
                        </li>
                    }
            </ul>
            <a class="btn btn-primary mt-3" href="/Venues/VenuesIndex">View All Venues</a>

        </div>
        <div class="col-md-6">
            <h2>Upcoming Events</h2>
            <ul class="list-group">

                @foreach (var eventItem in events)
                {
                    <li class="list-group-item">
                        @eventItem.EventName - @eventItem.EventDate.ToString("MMMM dd, yyyy")
                    </li>
                }

            </ul>
            <a class="btn btn-primary mt-3" href="/Events/EventsIndex">View All Events</a>
        </div>
    </div>
</div>
