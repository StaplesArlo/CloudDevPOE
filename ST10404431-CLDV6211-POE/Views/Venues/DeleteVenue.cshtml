@model ST10404431CLDV6211POE.Models.Venue

@{
    ViewData["Title"] = "Delete Venue";
}

<h1 class="text-center bg-danger text-white p-3 rounded">
    <i class="bi bi-trash"></i> Delete Venue
</h1> <!-- Styled Header -->
<hr />

<section class="container" style="max-width: 700px;">
    @* CONTAINER *@
    <section class="row justify-content-center">
        @* ROW *@
        <section class="col-md-8">
            @* COLUMN *@
            <div class="card shadow-lg border-danger p-4">
                @* BOX *@
                <p class="text-center text-danger fw-bold">
                    Are you sure you want to delete this venue? This action cannot be undone.
                </p> <!-- Warning Message -->

                <dl class="row">
                    @* VENUE DETAILS *@
                    <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.VenueName)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.VenueName)</dd>

                    <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Location)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Location)</dd>

                    <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Capacity)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Capacity)</dd>

                    <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Category)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Category)</dd>

                    <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.ImageURL)</dt>
                    <dd class="col-sm-9">
                        @if (!string.IsNullOrEmpty(Model.ImageURL))
                        {
                            <img src="@Model.ImageURL" alt="Venue Image"
                                 class="img-fluid img-thumbnail border border-danger"
                                 style="max-width: 250px; object-fit: cover;" /> <!-- Venue Image -->
                        }
                        else
                        {
                            <span class="text-muted">No Image Available</span> <!-- No Image Placeholder -->
                        }
                    </dd> @* IMAGE *@
                </dl>
            </div> @* BOX *@
        </section> @* COLUMN *@
    </section> @* ROW *@
</section> @* CONTAINER *@

<section class="text-center mt-3">
    @* ACTION BUTTONS *@
    <form asp-action="DeleteVenue" method="post">
        @* DELETE FORM *@
        <input type="hidden" asp-for="VenueID" />
        <button type="submit" class="btn btn-danger px-4">🗑 Confirm Delete</button> <!-- Delete Button -->
        <a class="btn btn-secondary px-4 ms-2" href="@Url.Action("VenuesIndex", "Venues")">⬅ Cancel</a> <!-- Cancel Button -->
    </form> @* FORM *@
</section> @* ACTIONS *@